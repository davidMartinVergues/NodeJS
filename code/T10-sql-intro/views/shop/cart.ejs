<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/main-product.css" />
  </head>
  <body>
    <%- include('../includes/navigation.ejs')%>
    <h1>Info del carrito</h1>
    <main>
      <% if (productData.length>0){ %>
      <h2>Precio total : <%=totalPrice%> €</h2>
      <div class="grid">
        <% productData.forEach(element => { %>

        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= element.title%></h1>
          </header>
          <div class="card__image">
            <img src="<%= element.imgUrl%>" alt="A Book" />
          </div>
          <div class="card__content">
            <h2 class="product__price"><%= element.price%> €</h2>
            <h2 class="product__qty">Cantidad: <%= element.qty%></h2>
            <p class="product__description">
              Desription: <%= element.description%>
            </p>
          </div>
          <div class="card__actions">
            <form action="/cart-delete-product/" method="POST">
              <input type="hidden" name="prodId" value="<%= element.id%>" />
              <button class="btn" type="submit">Delete</button>
            </form>
          </div>
        </article>
        <% }); %>
      </div>
      <%}else { %>

      <h1>Empty cart</h1>

      <% } %>
    </main>

    <script src="/js/main.js"></script>
  </body>
</html>
