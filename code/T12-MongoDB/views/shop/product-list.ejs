<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/main-product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

    <main>
      <div class="grid">
        <% if (items.length>0){ %> <% items.forEach(element => { %>

        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= element.title%></h1>
          </header>
          <div class="card__image">
            <img src="<%= element.imgUrl%>" alt="A Book" />
          </div>
          <div class="card__content">
            <h2 class="product__price"><%= element.price%> â‚¬</h2>
            <p class="product__description"><%= element.description%></p>
          </div>
          <div class="card__actions">
            <a href="/products/<%=  element._id %>" class="btn">Detail</a>
            <%- include('../includes/add-to-cart.ejs', {element: element}) %>
          </div>
        </article>
        <% }); %> <% }else { %>

        <h1>Not product found</h1>
        <% } %>
      </div>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>
