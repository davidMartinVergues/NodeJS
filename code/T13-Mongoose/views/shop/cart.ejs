<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/main-product.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('../includes/navigation.ejs')%>
    <h1>Info del carrito</h1>
    <main>
      <% if (productData.length>0){ %>
      <table class="container table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% productData.forEach(element => { %>
          <tr>
            <th scope="row"><%= element.title%></th>
            <td><%= element.price%></td>
            <td><%= element.quantity%></td>
            <td>
              <form action="/cart-delete-product/" method="POST">
                <input type="hidden" name="prodId" value="<%= element._id%>" />
                <button class="btn btn-outline-danger" type="submit">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
          <tr>
            <td colspan="4" class="position-relative">
              <form action="/create-order" method="POST">
                <button
                  class="position-absolute end-0 btn btn-outline-success"
                  type="submit"
                >
                  Order now!
                </button>
              </form>
            </td>
          </tr>
        </tbody>
      </table>
      <%}else { %>

      <h1>Empty cart</h1>

      <% } %>
    </main>

    <script src="/js/main.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
      integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
      integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
